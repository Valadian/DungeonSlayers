<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/knockout");
    <script type="text/javascript" src="~/Scripts/bootstrap-select.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-select.min.css" />
    <script type="text/javascript" src="~/Scripts/chosen.jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/chosen.min.css" />
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Scripts/js")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DS Tools", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Dashboard", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Active", "Active", "Home")</li>
                    <li>@Html.ActionLink("Characters", "Index", "Characters")</li>
                    @RenderSection("Navbar", required: false)
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div class="container">
            <div id="feedback">
                <div class="float-me" data-spaceholder="feedback">
                    <div id="success" style="color:lawngreen">
                    </div>
                    <div id="error" style="color:firebrick">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DungeonSlayers Tools</p>
        </footer>
    </div>
</body>
</html>
