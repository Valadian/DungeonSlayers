@using DungeonSlayers.Models
@model Weapon

<tr>
    <td></td>
    <td>@Model.Name</td>
    <td>+@Model.WeaponBonus</td>
    <td @Html.Raw(Model.Ranged?"style='background-color:darkgray'":"data-bind='text: +MAT()'")></td>
    <td @Html.Raw(!Model.Ranged?"style='background-color:darkgray'":"data-bind='text: +RAT()'")></td>
    <td></td>
    <td>@Model.Effect</td>
</tr>